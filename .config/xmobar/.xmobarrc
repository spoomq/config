Config { font = "xft:monospace:pixelsize=14:antialias=true:hinting=true"
       , additionalFonts = []
       , border = FullB
       , borderColor = "black"
       , bgColor = "#000000"
       , fgColor = "#ffebf7"
       , alpha = 255
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Cpu ["-L","3","-H","50",
                          "--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "    %date% }\
                    \{ %cpu% | %memory%    "
       }
